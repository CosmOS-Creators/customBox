{
    "version": "1.0.0",
    "attributes": {
        "TaskName": {
            "label": "Name of the task",
            "type": "string",
            "validation": "^[A-Za-z][A-Za-z0-9_]*$"
        },
        "wcet": {
            "label": "Worst case execution time",
            "type": "int",
            "min": 0,
            "max": 2048
        },
        "period": {
            "label": "Scheduling period",
            "type": "int",
            "min": 0,
            "max": 2048
        },
        "floatingPoint": {
            "label": "Enable floating point for this task",
            "type": "bool"
        },
        "isIdle": {
            "label": "Is the task an idle task",
            "type": "bool"
        },
        "isSysJob": {
            "label": "Is the task a sys job task",
            "type": "bool"
        },
        "stackSize": {
            "label": "stack size of the task",
            "type": "int",
            "min": 0,
            "max": 2048
        },
        "TaskID": {
            "placeholder": true,
            "type": "int"
        }
    },
    "elements": {}
}